{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "typeRoots": [
      "@types",
      "jest",
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@src/*": ["src/*"],
      "@tests/*": ["tests/*"]
    },
  },
  "include": ["src/**/*", "*.ts", "tests/**/*"],
  "exclude": ["node_modules", "dist"],
}
